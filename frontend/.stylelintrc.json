{
    "extends": [
        "stylelint-config-standard-scss"
    ],
    "plugins": [
        "stylelint-selector-bem-pattern"
    ],
    "rules": {
        "plugin/selector-bem-pattern": {
            "preset": "bem",
            "componentName": "[a-zA-Z0-9]+",
            "componentSelectors": {
                "initial": "^\\.{componentName}(?:-[a-zA-Z0-9]+)?(?:--[a-zA-Z0-9]+)?$"
            }
        },
        "selector-class-pattern": "^[a-z][a-zA-Z0-9-]+$"
    }
}